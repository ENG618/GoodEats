<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/search_map_container"
        android:background="@android:color/darker_gray" >

    </LinearLayout>

    <AutoCompleteTextView android:id="@+id/auto_complete_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:hint="@string/hint_search"
        android:layout_margin="@dimen/window_margin"
        android:padding="5dp"
        android:background="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_view_in_map"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/auto_complete_tv"
        android:layout_alignEnd="@+id/auto_complete_tv"
        android:layout_alignLeft="@+id/auto_complete_tv"
        android:layout_alignStart="@+id/auto_complete_tv" />
</RelativeLayout>